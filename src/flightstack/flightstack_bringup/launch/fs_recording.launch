<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="dev_id"    default="1" />

    <!-- data recorder paramters -->
    <arg name="rec_script_file"   default="$(find flightstack_scripts)/record_scripts/record_start_dh.sh" />
    <arg name="rec_cmd"           default="full" />
    <!-- <arg name="store_script_file" default="$(find flightstack_scripts)/store_scripts/safe_merge_data_multi_dev.sh" />
    <arg name="store_cmd"         default="" /> -->
    <arg name="rec_verbose"       default="False" />

    <group if="$(eval arg('dev_id') == 1)">
      <include file="$(find data_recorder)/launch/recorder.launch">
        <arg name="record_script"   default="$(arg rec_script_file)" />
        <arg name="record_cmd"      default="$(arg rec_cmd)" />
        <!-- <arg name="store_script"    default="$(arg store_script_file)" />
        <arg name="store_cmd"       default="$(arg store_cmd)" /> -->
        <arg name="verbose"         default="$(arg rec_verbose)" />
      </include>
    </group>
</launch>
