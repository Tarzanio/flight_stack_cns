<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="pi"    default="1" />

    <!-- data recorder paramters -->
    <!-- <arg name="rec_script_file"   default="$(find amadee_bringup)/../record_scripts/record_full_setup.sh" />
    <arg name="rec_cmd"           default="dev1_full" />
    <arg name="store_script_file" default="$(find amadee_bringup)/../record_scripts/safe_merge_data_multi_dev.sh" />
    <arg name="store_cmd"         default="" /> -->
    <arg name="rec_verbose"       default="False" />

    <!-- Dummy files until completed scripts -->
    <arg name="rec_script_file"   default="$(find amadee_bringup)/../record_scripts/record_dummy.sh" />
    <arg name="rec_cmd"           default="" />
    <arg name="store_script_file" default="$(find amadee_bringup)/../record_scripts/store_dummy.sh" />
    <arg name="store_cmd"         default="" />

    <group if="$(eval arg('pi') == 1)">
      <include file="$(find data_recorder)/launch/recorder.launch">
        <arg name="record_script"   default="$(arg rec_script_file)" />
        <arg name="record_cmd"      default="$(arg rec_cmd)" />
        <arg name="store_script"    default="$(arg store_script_file)" />
        <arg name="store_cmd"       default="$(arg store_cmd)" />
        <arg name="verbose"         default="$(arg rec_verbose)" />
      </include>
    </group>
</launch>
